<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
    VISTAS PARA EL MODELO estate.property.type (Tipos de Propiedades)
    Define la acción y vistas para gestionar los tipos de propiedades (Casa, Apartamento, etc.)
    -->
    
    <!-- 
    Acción de ventana que abre la vista de tipos de propiedades
    Permite acceder a la lista de tipos mostrando lista y formulario
    -->
    <record id="property_type" model="ir.actions.act_window">
        <field name="name">Property Types</field>
        <field name="res_model">estate.property.type</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- 
    VISTA DE LISTA (tree view) para estate.property.type
    Muestra todos los tipos de propiedades disponibles en formato tabla
    -->
    <record id="view_estate_property_type_list" model="ir.ui.view">
        <field name="name">estate.property.type.list</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <list string="Property Types">
                <!-- Campo de secuencia para ordenamiento manual -->
                <field name="sequence" widget="handle"/>
                <!-- Nombre del tipo de propiedad -->
                <field name="name"/>
            </list>
        </field>
    </record>

    <!-- 
    VISTA DE FORMULARIO para estate.property.type
    Muestra el detalle de un tipo de propiedad individual para crear o editar
    -->
    <record id="view_estate_property_type_form" model="ir.ui.view">
        <field name="name">estate.property.type.form</field>
        <field name="model">estate.property.type</field>
        <field name="arch" type="xml">
            <form string="Property Type">
                <sheet>
                    <!-- Botón de estadísticas en la esquina superior derecha -->
                    <div class="oe_button_box" name="button_box">
                        <button name="%(estate_property_offer_action)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-money">
                            <field name="offer_count" widget="statinfo" string="Offers"/>
                        </button>
                    </div>
                    <group>
                        <!-- Campo para el nombre del tipo de propiedad -->
                        <field name="name"/>
                    </group>
                    <!-- Vista de lista en línea de propiedades de este tipo -->
                    <field name="property_ids">
                        <list>
                            <field name="name"/>
                            <field name="expected_price"/>
                            <field name="state"/>
                        </list>
                    </field>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
