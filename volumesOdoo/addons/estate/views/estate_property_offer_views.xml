<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- 
    VISTAS PARA EL MODELO estate.property.offer (Ofertas de Propiedades)
    Define la vista en lista y formulario para gestionar las ofertas de compra
    -->

    <!-- 
    Acción de ventana que abre la vista de ofertas filtradas por tipo de propiedad
    -->
    <record id="estate_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[("property_type_id", "=", active_id)]</field>
    </record>
    
    <!-- 
    VISTA DE LISTA (tree view) para estate.property.offer
    Muestra todas las ofertas en formato tabla con información resumida
    -->
    <record id="view_estate_property_offer_list" model="ir.ui.view">
        <field name="name">estate.property.offer.list</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <list string="Property Offers" 
                  editable="bottom"
                  decoration-success="status == 'accepted'"
                  decoration-danger="status == 'refused'">
                <!-- Precio ofertado por el comprador -->
                <field name="price"/>
                <!-- Contacto/comprador que realiza la oferta -->
                <field name="partner_id"/>
                <!-- Tipo de propiedad (campo relacionado) -->
                <field name="property_type_id"/>
                <!-- Validez en días -->
                <field name="validity"/>
                <!-- Fecha límite calculada -->
                <field name="date_deadline"/>
                <!-- Estado: Aceptada o Rechazada (invisible pero necesario para decoraciones) -->
                <field name="status" column_invisible="1"/>
                <!-- Botones de acción -->
                <button name="action_accept" type="object" icon="fa-check" title="Accept" invisible="status"/>
                <button name="action_refuse" type="object" icon="fa-times" title="Refuse" invisible="status"/>
            </list>
        </field>
    </record>

    <!-- 
    VISTA DE FORMULARIO para estate.property.offer
    Muestra el detalle de una oferta individual
    -->
    <record id="view_estate_property_offer_form" model="ir.ui.view">
        <field name="name">estate.property.offer.form</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <form string="Property Offer">
                <sheet>
                    <!-- Campos principales de la oferta -->
                    <group>
                        <!-- Precio ofertado -->
                        <field name="price"/>
                        <!-- Información del comprador -->
                        <field name="partner_id"/>
                        <!-- Validez en días -->
                        <field name="validity"/>
                        <!-- Fecha límite calculada -->
                        <field name="date_deadline"/>
                        <!-- Estado de la oferta (Aceptada/Rechazada) -->
                        <field name="status"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
